<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>


  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>javaservlet.ServletContextListener</listener-class>
  </listener>


  <filter>
    <filter-name>JsonConverterFilter</filter-name>
    <filter-class>converterfilter.JsonConverterFilter</filter-class>
  </filter>


  <filter>
    <filter-name>RollNumberFilter</filter-name>
    <filter-class>javaservlet.RollNumberFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JsonConverterFilter</filter-name>
    <url-pattern>/student</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>RollNumberFilter</filter-name>
    <url-pattern>/student</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>NameFilter</filter-name>
    <filter-class>javaservlet.NameFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>NameFilter</filter-name>
    <url-pattern>/student</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>StudentServlet</servlet-name>
    <servlet-class>javaservlet.StudentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>StudentServlet</servlet-name>
    <url-pattern>/student</url-pattern>
  </servlet-mapping>



</web-app>
